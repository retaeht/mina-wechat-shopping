/* pages/user/index.wxss */
page {
  background-color: #f2f2f2;
}
.user-info-container .user-info-wrap {
  position: relative;
  overflow: hidden;
}
.user-info-container .user-info-wrap .user-img-wrap .user-bgi {
  height: 50vh;
  filter: blur(5rpx);
}
.user-info-container .user-info-wrap .user-img-wrap .user-info-wrap {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}
.user-info-container .user-info-wrap .user-img-wrap .user-info-wrap image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.user-info-container .user-info-wrap .user-img-wrap .user-info-wrap .user-nickName {
  font-size: 32rpx;
  color: #fff;
}
.user-info-container .user-info-wrap .login-btn {
  height: 50vh;
  text-align: center;
}
.user-info-container .user-content {
  position: relative;
}
.user-info-container .user-content .user-main {
  position: absolute;
  padding: 0 20rpx;
  width: 100%;
  top: -60rpx;
}
.user-info-container .user-content .user-main .history-wrap {
  background-color: #fff;
  display: flex;
}
.user-info-container .user-content .user-main .history-wrap navigator {
  padding: 10rpx 0;
  flex: 1;
  text-align: center;
}
.user-info-container .user-content .user-main .history-wrap navigator .num {
  color: var(--themeColor);
}
.user-info-container .user-content .user-main .order-wrap {
  margin-top: 20rpx;
  background-color: #fff;
}
.user-info-container .user-content .user-main .order-wrap .order-title {
  padding: 20rpx;
  border-bottom: 1px solid #f2f2f2;
}
.user-info-container .user-content .user-main .order-wrap .order-content {
  display: flex;
}
.user-info-container .user-content .user-main .order-wrap .order-content navigator {
  padding: 20rpx 0;
  flex: 1;
  text-align: center;
}
.user-info-container .user-content .user-main .order-wrap .order-content navigator .iconfont {
  color: var(--themeColor);
  padding-bottom: 10rpx;
}
.user-info-container .user-content .user-main .address-wrap,
.user-info-container .user-content .user-main .share-wrap {
  padding: 20rpx;
  margin: 20rpx 0;
  background-color: #fff;
}
.user-info-container .user-content .user-main .app-info-wrap {
  background-color: #fff;
}
.user-info-container .user-content .user-main .app-info-wrap .app-info-item {
  padding: 20rpx;
}
.user-info-container .user-content .user-main .app-info-wrap .app-info-item:nth-child(-n+2) {
  border-bottom: 1px solid #f2f2f2;
}
.user-info-container .user-content .user-main .app-info-wrap .app-info-item text:last-child {
  float: right;
}
