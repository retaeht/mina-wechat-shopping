/* pages/collect/index.wxss */
page {
  background-color: #f2f2f2;
}
.collect-container .tabs {
  background-color: #fff;
}
.collect-container .collect-filter {
  padding: 20rpx;
  display: flex;
}
.collect-container .collect-filter view {
  padding: 20rpx 10rpx;
  border: 1rpx solid #ccc;
  margin-right: 20rpx;
  background-color: #fff;
}
.collect-container .collect-filter .current {
  color: var(--themeColor);
}
.collect-container .collect-content .collect-item {
  background-color: #fff;
  display: flex;
}
.collect-container .collect-content .collect-item .item-img {
  flex: 2;
}
.collect-container .collect-content .collect-item .item-img image {
  width: 100%;
}
.collect-container .collect-content .collect-item .item-info {
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
}
.collect-container .collect-content .collect-item .item-info .item-name {
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.collect-container .collect-content .collect-item .item-info .item-price {
  color: var(--themeColor);
  font-size: 32rpx;
}
