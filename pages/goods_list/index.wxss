/* pages/goods_list/index.wxss */
.goods-list .goods-item {
  display: flex;
}
.goods-list .goods-item .goods-img-wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods-list .goods-item .goods-img-wrap image {
  width: 70%;
}
.goods-list .goods-item .goods-info-wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods-list .goods-item .goods-info-wrap .goods-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-list .goods-item .goods-info-wrap .goods-price {
  color: var(--themeColor);
  font-size: 32rpx;
}
