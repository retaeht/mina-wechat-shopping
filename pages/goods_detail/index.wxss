/* pages/goods_detail/index.wxss */
page {
  padding-bottom: 90rpx;
}
.goods-detail .detail-swiper swiper {
  height: 65vw;
  text-align: center;
}
.goods-detail .detail-swiper swiper image {
  width: 60%;
}
.goods-detail .goods-price {
  font-size: 36rpx;
  color: var(--themeColor);
  font-weight: 700;
  padding: 10rpx 20rpx;
}
.goods-detail .goods-name-row {
  display: flex;
  color: #666;
  padding: 20rpx 0;
  border-top: 30rpx solid #f2f2f2;
  border-bottom: 30rpx solid #f2f2f2;
}
.goods-detail .goods-name-row .name {
  flex: 4;
  border-right: 1px solid currentColor;
  padding: 0 20rpx;
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-detail .goods-name-row .collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-content: space-around;
  align-items: center;
}
.goods-detail .goods-info {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
}
.goods-detail .goods-info .goods-info-title {
  padding: 20rpx;
  border-bottom: 10rpx solid #f2f2f2;
}
.goods-detail .btm-tool {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
}
.goods-detail .btm-tool .tool-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  height: 100%;
  position: relative;
}
.goods-detail .btm-tool .tool-item button {
  height: 100%;
  opacity: 0;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.goods-detail .btm-tool .btn-cart {
  flex: 2;
  background-color: #ffa500;
  font-size: 30rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-self: center;
}
.goods-detail .btm-tool .btn-buy {
  flex: 2;
  font-size: 30rpx;
  color: #fff;
  display: flex;
  background-color: var(--themeColor);
  justify-content: center;
  align-self: center;
}
